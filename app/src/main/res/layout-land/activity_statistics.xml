<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30sp"
    android:paddingLeft="12sp"
    android:paddingRight="12sp"
    android:paddingTop="30sp"
    tools:context=".StatisticsActivity">

    <TextView
        android:id="@+id/titleStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:text="@string/titleStatistics"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitleStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="12dp"
        android:text="Cantidad de estudiantes procesados:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/countStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="370dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subtitle2Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:text="Cantidad de estudiantes que ganan:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/count2Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="370dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subtitle3Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="12dp"
        android:text="Cantidad de estudiantes que pierden:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/count3Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="374dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/subtitle4Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="12dp"
        android:text="Cantidad de estudiantes que pueden recuperar:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/count4Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="440dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="12dp"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="46dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/arrow_back" />


</RelativeLayout>